<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hgv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zwb.histogramviewdemo.MainActivity">

    <com.zwb.histogramviewdemo.HistogramView
        android:id="@+id/hgv"
        android:background="@drawable/histogram_bg"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        hgv:divider_height="1dp"
        hgv:xColor="#ccc"
        hgv:yColor="#0f0"
        hgv:textColor="#010"
        hgv:xTextSize="13sp"
        hgv:yTextSize="14sp"
        hgv:yWidth="4dp"/>
</RelativeLayout>
