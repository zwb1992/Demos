<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:id="@+id/main"
    android:focusableInTouchMode="true"
    tools:context="com.iwanna.learn.view.activity.ActiivtyDetailsActivity">
<include layout="@layout/layout_topview"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_activity"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/default_activity"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20.5dp"
                android:paddingRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_color_black"
                    android:text="@string/activity_name"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_color_6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="6dp"
                android:paddingRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_color_black"
                    android:text="@string/activity_time"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_color_6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="6dp"
                android:paddingRight="20dp"
                android:gravity="top"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_color_black"
                    android:text="@string/activity_address"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_color_6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="6dp"
                android:paddingRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_color_black"
                    android:text="@string/activity_details1"/>
                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_content"
                    android:textColor="@color/text_color_6"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/text_content"
                android:textColor="@color/tip_yellow_color"
                android:text="@string/activity_tip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text"
                    android:textColor="@color/text_color"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:text="@string/phone"/>
                <EditText
                    android:id="@+id/ed_phone"
                    android:inputType="phone"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textSize="@dimen/text"
                    android:textColor="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/activity_phone"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text"
                    android:textColor="@color/text_color"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:text="@string/name1"/>
                <EditText
                    android:id="@+id/ed_name"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textSize="@dimen/text"
                    android:textColor="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/name2"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text"
                    android:textColor="@color/text_color"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:text="@string/join_people"/>
                <TextView
                    android:id="@+id/tv_select"
                    android:inputType="phone"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textSize="@dimen/text"
                    android:textColor="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableRight="@mipmap/drop"
                    android:hint="@string/input_join_people"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/divider"/>
            <Button
                android:id="@+id/bt_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/btn_textSize"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/c11"
                android:textColor="@color/white"
                android:text="@string/free_join"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
