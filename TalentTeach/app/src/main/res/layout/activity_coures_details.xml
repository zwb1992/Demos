<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.iwanna.learn.view.activity.CouresDetailsActivity">

    <include layout="@layout/layout_topview"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_course"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:scaleType="fitXY"
                android:src="@mipmap/default_img"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_TeachingObject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_4"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    tools:text="授课对象：3-7岁"/>
                <TextView
                    android:id="@+id/tv_banxing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_content"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/text_color_4"
                    tools:text="班型：3-4人"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/divider"/>
            <TextView
                android:id="@+id/tv_service_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="@dimen/text_content"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="@color/text_color_4"
                tools:text="学生上门：¥5999/学期／20课时／90分钟"/>
            <View
                android:id="@+id/v_address"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="1dp"
                android:background="@color/divider"/>
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
<ImageView
    android:id="@+id/img_touxiang"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginLeft="19.5dp"
    android:layout_marginTop="20.5dp"
    android:layout_marginBottom="20.5dp"
    android:src="@mipmap/default_face"/>
                <LinearLayout
                    android:id="@+id/ll_details"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_AgencyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="@dimen/text_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        tools:text="晨银舞蹈"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="@dimen/text_content"
                        android:layout_weight="1"
                        android:layout_marginTop="1dp"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:textColor="@color/text_color_4"
                        android:drawableLeft="@mipmap/location_black"
                        android:drawablePadding="5dp"
                        tools:text="深圳市宝安区西乡流塘市场宝立方6楼 约1.2km"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/v_course_describe1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>
                    <TextView
                        android:id="@+id/tv_course_describe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_color_4"
                        android:drawablePadding="5dp"
                        android:text="@string/course_describe"/>
                    <View
                        android:id="@+id/v_course_describe2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/v_teach_site1"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>
                    <TextView
                        android:id="@+id/tv_teach_site"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_color_4"
                        android:drawablePadding="5dp"
                        android:text="@string/teach_site"/>
                    <View
                        android:id="@+id/v_teach_site2"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/v_dianpin1"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>
                    <TextView
                        android:id="@+id/tv_dianpin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_color_4"
                        android:drawablePadding="5dp"
                        android:text="用户点评（0）"/>
                    <View
                        android:id="@+id/v_dianpin2"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_fragment1"
                android:background="#f00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray"
        />
<LinearLayout
    android:id="@+id/ll_bottom1"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
<TextView
    android:id="@+id/tv_call"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ask_phone"
    android:textColor="@color/text_color"
    android:drawableLeft="@mipmap/call"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    android:textSize="@dimen/text_content"/>
    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <View
        android:layout_width="1px"
        android:layout_height="20dp"
        android:background="@color/divider"/>
    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_baoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entry_soon"
        android:textColor="@color/text_color"
        android:drawableLeft="@mipmap/baoming"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_content"/>
    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom2"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
        <TextView
            android:id="@+id/tv_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/viewer"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_content"/>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
        <TextView
            android:id="@+id/tv_baoming_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:drawableLeft="@mipmap/baoming"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textSize="@dimen/text_content"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
